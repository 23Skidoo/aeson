name:                aeson-examples
version:             0
build-type:          Simple
cabal-version:       >=1.8

executable aeson-example-generic
  main-is: Generic.hs
  ghc-options: -Wall
  build-depends:
    aeson == 0.9.*,
    base,
    bytestring,
    ghc-prim

executable aeson-example-simplest
  main-is: Simplest.hs
  ghc-options: -Wall
  build-depends:
    aeson,
    base,
    bytestring

executable aeson-example-th
  -- FIXME Disabled until TH support for toEncoding is implemented
  buildable: False
  main-is: TemplateHaskell.hs
  ghc-options: -Wall
  build-depends:
    aeson,
    base,
    bytestring
